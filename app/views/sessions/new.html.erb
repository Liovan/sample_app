<% provide(:title, 'ورود') %>
<h1>ورود به <%= $APP_NAME %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, "پست الکترونیک" %>
        <%= f.text_field :email, class: "form-control" %>

        <%= f.label :password, "رمز عبور" %>
        <%= link_to "(فراموش کردم!)", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control" %>

          <div class="funkyradio col-lg-5 pull-right">
            <div class="funkyradio-info">
              <%= f.check_box :remember_me, checked: false%>
              <%= f.label :remember_me, "این رایانه را بخاطر بسپار" %>
            </div>
          </div>


      <%= f.submit "وارد شو!", class:"btn btn-primary" %>
    <% end %>

    <p>  حساب نداری؟
      <%= link_to "عضو شو!" ,signup_path %>
    </p>
  </div>
</div>
