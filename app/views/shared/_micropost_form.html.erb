<%= form_for(@micropost) do |f| %>
<%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "یه چیزی بگو..." %>
  </div>
  <%= f.submit "ارسال", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/png, image/gif, image/jpeg' %>
  </span>

<% end %>

<%#TODO clear file upload after alert displayed %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('لطفا یک فایل کوچکتر انتخاب کنید. حداکثر ۵ مگابایت!');
    }
  });
</script>
