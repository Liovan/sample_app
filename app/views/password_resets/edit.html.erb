<% provide(:title, 'بازیابی رمز عبور') %>
<h1>بازیابی رمزعبور</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%-# id is the token actually -%>
    <%= form_for(@user, url: password_reset_url(params[:id])) do |f| %>
      <%= render partial: "shared/error_messages" %>

      <%= hidden_field_tag :email, @user.email %>
      
      <%= f.label :password, "رمز عبور" %>
      <%= f.password_field :password, class: "form-control", placeholder: "(حداقل ۶ نویسه)" %>

      <%= f.label :password_confirmation, "تکرار" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "(تکرار رمز عبور)" %>
      <%= f.submit "به روز رسانی", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
