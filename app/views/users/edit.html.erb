<% provide(:title, 'ویرایش نمایه') %>
<h1>نمایه خود را ویرایش کنید</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render partial: "shared/error_messages" %>

      <%= f.label :name, "نام" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email, "پست الکترونیک" %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :password, "رمز عبور" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "تکرار" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "ثبت تغییرات", class:"btn btn-primary" %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %> <!--#users_helper -->
      <a href="http://gravatar.com/emails" target="_blank">تغییر</a>
    </div>
  </div>
</div>
