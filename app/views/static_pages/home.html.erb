<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4 pull-right">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="micropost_form">
				<%=  render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>آخرین پست ها</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>خوش آمدید</h1>

		<h2>این صفحه ی اصلی است.</h2>

		<%= link_to "عضو شو!", signup_path, class: "btn btn-lg btn-primary" %>
		<p>این یک پاراگراف فارسی است. و ارزش دیگری ندارد؟</p>
	</div>

	<%= link_to image_tag("meam.png", alt: "لوگو سایت", width: 200, height: 150), '#' %>
<% end %>
